<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'user', user: @user, book: @book %>
  </div>

  <!--User一覧の部分-->
<div class="col-md-8 offset-md-1">
    <table class="table table-striped">
    <h1>Users</h1>
     <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
        <%=link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "Show",user_path(book.user) %>
        </td>
      </tr>
      <% end %>
     </tbody>
     </table>
     </div>
    </div>
  </div>
