
<div class="container">
 <%= flash[:notice] %>
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/info', user: @user, book: @book_new %>
  </div>

  <div class="col-md-8 offset-md-1">
    <table class="table table-striped">
    <h1>Book detail</h1>
     <thead>
       <tr>
        <td>
        <%=link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100) %><br>
         <%= @user.name %>
        <% end %>
       </td>
       <td>
       </td>
        <td>
        <%=link_to book_path(@book) do %>
          <%= @book.title %>
        <% end %>
         </td>
         <td><%= @book.body %></td>
         <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit",edit_book_path(@book), class: "btn btn-success" %>
          <% end %>
          </td>
         <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy",books_path(@book), method: :delete, class: "btn btn-danger" %>
          <% end %>
          </td>
       </tr>
      </thead>
    </table>
  </div>

